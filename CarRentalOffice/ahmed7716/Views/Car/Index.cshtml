@model List<ahmed7716.Models.Car>

<h2>Car List</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add Car</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Car ID</th>
            <th>Name</th>
            <th>Model</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Id</td>
                <td>@car.Name</td>
                <td>@car.Model</td>
                <td>@car.Price</td>
                <td>
                    <a asp-action="Details" asp-route-id="@car.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@car.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@car.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
