@model ahmed7716.Models.Car

<h2>Delete Car</h2>

<h3>Are you sure you want to delete this car?</h3>

<div>
    <h3>@Model.Name</h3>
    <p><strong>Model:</strong> @Model.Model</p>
    <p><strong>Price:</strong> @Model.Price</p>
    <p><strong>Price:</strong> @Model.Year</p>
    <p><strong>Price:</strong> @Model.Color</p>
    <p><strong>Price:</strong> @Model.PlateNumberce</p>
    <p><strong>Price:</strong> @Model.Status</p>
</div>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>