@model List<ahmed7716.Models.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<div class="container mt-4">
    <div class="d-flex mb-4">
        <a asp-action="Create" class="btn btn-primary me-auto">
            <i class="fas fa-plus me-1"></i>Add New
        </a>
        <h2 class="mb-0">
            <i class="fas fa-users me-2"></i>@ViewData["Title"]
        </h2>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Position</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.EmployeeID</td>
                    <td>@item.Name</td>
                    <td>@item.Position</td>
                    <td>@item.Phone</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.EmployeeID" class="btn btn-sm btn-dark">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.EmployeeID" class="btn btn-sm btn-dark">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.EmployeeID" class="btn btn-sm btn-dark">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
