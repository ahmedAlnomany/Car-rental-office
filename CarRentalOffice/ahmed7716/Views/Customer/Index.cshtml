@model List<ahmed7716.Models.Rental>

@{
    ViewData["Title"] = "Rental List";
}

<div class="container">
    <h2>Rental List</h2>
    <p>
        <a asp-action="Create" class="btn btn-primary mb-3">
            <i class="fas fa-plus"></i> Add Rental
        </a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Rental ID</th>
                    <th>Customer</th>
                    <th>Car</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Total Cost</th>
                    <th>Payment Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rental in Model)
                {
                    <tr>
                        <td>@rental.RentalID</td>
                        <td>@rental.customer?.Name</td>
                        <td>@rental.car?.Model</td>
                        <td>@rental.StartDate.ToShortDateString()</td>
                        <td>@rental.EndDate.ToShortDateString()</td>
                        <td>@rental.TotalCost</td>
                        <td>@rental.PaymentStatus</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@rental.RentalID" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@rental.RentalID" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@rental.RentalID" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
