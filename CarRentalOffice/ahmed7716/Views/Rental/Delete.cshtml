@model ahmed7716.Models.Rental

@{
    ViewData["Title"] = "Delete Rental";
}

<div class="container">
    <h2>Are you sure you want to delete this rental?</h2>

    <div class="mb-4">
        <dl class="row">
            <dt class="col-sm-2">ID:</dt>
            <dd class="col-sm-10">@Model.RentalID</dd>

            <dt class="col-sm-2">Name:</dt>
            <dd class="col-sm-10">@Model.customer.Name</dd>

            <dt class="col-sm-2">Status:</dt>
            <dd class="col-sm-10">@Model.PaymentStatus</dd>

            <dt class="col-sm-2">Total Cost:</dt>
            <dd class="col-sm-10">@Model.TotalCost</dd>
        </dl>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="RentalID" />
        <!-- زر Delete الرئيسي (أبيض) -->
        <button type="submit" class="btn" style="background-color:white;color:black;border:1px solid #ddd">
            <i class="fas fa-trash-alt"></i> Delete
        </button>
        <!-- زر Cancel ثانوي (يبقى كما هو) -->
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
