@model ahmed7716.Models.Rental
<h1>Rental Details</h1>

<div>
    <h3>Rental #@Model.RentalID</h3>
    
    <h4>Customer Information</h4>
    <p><strong>Name:</strong> @Model.customer.Name</p>
    <p><strong>Phone:</strong> @Model.customer.Phone</p>
    <p><strong>Email:</strong> @Model.customer.Email</p>
    <p><strong>Address:</strong> @Model.customer.Adrss</p>
    <p><strong>License Number:</strong> @Model.customer.LicenseNumber</p>
    
    <h4>Car Information</h4>
    <p><strong>Car:</strong> @Model.car.Name @Model.car.Model</p>
    <p><strong>Year:</strong> @Model.car.Year</p>
    <p><strong>Color:</strong> @Model.car.Color</p>
    <p><strong>Plate Number:</strong> @Model.car.PlateNumberce</p>
    <p><strong>Status:</strong> @Model.car.Status</p>
    
    <h4>Rental Period</h4>
    <p><strong>Start Date:</strong> @Model.StartDate.ToString("d")</p>
    <p><strong>End Date:</strong> @Model.EndDate.ToString("d")</p>
    
    <h4>Payment</h4>
    <p><strong>Total Cost:</strong> @Model.TotalCost.ToString("C")</p>
    <p><strong>Payment Status:</strong> @Model.PaymentStatus</p>
</div>

<div>
    <a href="@Url.Action("Index", "Rental")" class="btn btn-secondary">Back to List</a>
</div>