@model ahmed7716.Models.Rental

@{
    ViewData["Title"] = "Rental Details";
}

<div class="container">
    <h2>Rental Details</h2>

    <dl class="row">
        <dt class="col-sm-2">Customer ID</dt>
        <dd class="col-sm-10">@Model.CustomerID</dd>

        <dt class="col-sm-2">Car ID</dt>
        <dd class="col-sm-10">@Model.CarID</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Total Cost</dt>
        <dd class="col-sm-10">@Model.TotalCost</dd>

        <dt class="col-sm-2">Payment Status</dt>
        <dd class="col-sm-10">@Model.PaymentStatus</dd>
    </dl>

    <!-- زر Edit (داخلي - يبقى أصفر) -->
    <a asp-action="Edit" asp-route-id="@Model.RentalID" class="btn btn-warning">
        <i class="fas fa-edit"></i> Edit
    </a>
    <!-- زر Back to List (خارجي - أبيض) -->
    <a asp-action="Index" class="btn" style="background-color:white;color:black;border:1px solid #ddd">
        Back to List
    </a>
</div>
