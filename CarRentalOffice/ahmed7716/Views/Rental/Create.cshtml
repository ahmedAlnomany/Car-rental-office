@model ahmed7716.Models.Rental

@{
    ViewData["Title"] = "Create Rental";
}

<div class="container">
    <h2>Create Rental</h2>

    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="CustomerID"></label>
            <input asp-for="CustomerID" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="CarID"></label>
            <input asp-for="CarID" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="StartDate"></label>
            <input asp-for="StartDate" class="form-control" type="date" />
        </div>
        <div class="form-group">
            <label asp-for="EndDate"></label>
            <input asp-for="EndDate" class="form-control" type="date" />
        </div>
        <div class="form-group">
            <label asp-for="TotalCost"></label>
            <input asp-for="TotalCost" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="PaymentStatus"></label>
            <input asp-for="PaymentStatus" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
